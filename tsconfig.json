{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "lib": ["DOM", "ES2020"],
      "esModuleInterop": true,
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "outDir": "dist",
      "sourceMap": true,
      "rootDir": ".",
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "*": ["*", "node_modules/*"]
      },
    },
    "include": [],
    "exclude": [
      "**/node_modules",
      "**/dist"
    ]
  }